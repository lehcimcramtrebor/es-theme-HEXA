<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>
	<view name="splash">
		<splash name="splash">
			<backgroundColor>000000FF</backgroundColor>
		</splash>
		
		<image name="background">
			<pos>0.5 0.35</pos>
			<origin>0.5 0.5</origin>
			<maxSize>0.85 0.6</maxSize>
			<reflexion>0.25 0</reflexion>
			<roundCorners>0.02</roundCorners>
			<linearSmooth>false</linearSmooth>
			<color>ffffff</color>
			<colorEnd>cccccc</colorEnd>
			<saturation>0.95</saturation>
			<gradientType>vertical</gradientType>
			<zIndex>1</zIndex>
		</image>

		<image name="maskbg" extra="true">
			<path>./_inc/mask.png</path> 
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
			<size>1 1</size>
			<linearSmooth>true</linearSmooth>
			<color>ffffff</color>
			<zIndex>6</zIndex>
		</image>
		
		<image name="scanlines" extra="true">
			<path>./_inc/scanlines.png</path>
			<tile>true</tile> 
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
			<size>1 1</size>
			<linearSmooth>true</linearSmooth>
			<color>ffffff</color>
			<zIndex>5</zIndex>
		</image>

		<text name="label">
			<origin>0.5 0.5</origin>
			<pos>0.5 0.75</pos>
			<alignment>center</alignment>
			<color>dddddd</color>
			<fontPath>./_inc/fonts/conthrax-sb.ttf</fontPath>
			<fontSize>0.032</fontSize>
            <glowColor>00000080</glowColor>
			<glowOffset>1</glowOffset>
			<glowSize>1</glowSize>
		</text>

		<image name="darken" extra="true">
			<path>./_inc/white.png</path>
			<pos>0 0.7</pos>
			<origin>0 0</origin>
			<size>1 0.3</size>
			<color>00000000</color>
			<colorEnd>000000F0</colorEnd>
			<zIndex>8</zIndex>
		</image>

	</view>

</theme>
