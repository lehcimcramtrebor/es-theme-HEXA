<?xml version="1.0" encoding="UTF-8"?>

<theme>

<formatVersion>7</formatVersion>

	<variables>
<!---->	<_paintSubset.allow>_paintSubset</_paintSubset.allow><!--Allow Paint Menu-->
		<wallpaper>wallScanlines</wallpaper>
	</variables>

    <view name="menu,system,basic,detailed,grid,gamecarousel">

        <image name="background" extra="true">
			<tile>true</tile>
       </image>
	</view>

	<view name="basic,detailed,grid,gamecarousel" ifSubset="transition:yes,fullHexa:yes">
		<image name="transitionBack" extra="true">
			<tile>true</tile>
		</image>
	</view>

	<view name="system">
        <image name="backgroundVideoFix" extra="true" ifSubset="ambiance:randomVideosAudioOn|randomVideosAudioOff,fullHexa:yes">
			<tile>true</tile>
        </image>
	</view>
 	
</theme>
