<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>
		
	<view name="detailed,grid,gamecarousel">
        
		<image name="logoColorContainer" extra="true">
            <linearSmooth>true</linearSmooth>
            <path>./../../../default/color.png</path>
            <path>./../../../default/color-${lang}.png</path>
            <path>./../../../${system.theme}/color.png</path>
            <path>./../../../${system.theme}/color-${lang}.png</path>
            <path region="us">./../../../${system.theme}/us/color.png</path>
            <path region="jp">./../../../${system.theme}/jp/color.png</path>
            <path ifSubset="neogeoaes:yes">./../../../${system.theme}/color-aes.png</path>
            <path ifSubset="containerTile:customTile">./../../../_hexaCustom/tile/custom.png</path>
            <path ifArch="windows" ifSubset="containerTile:customTile">./../../../../../../../_hexaCustom/tile/custom.png</path>
            <path ifNotArch="windows" ifSubset="containerTile:customTile">./../../../../../_hexaCustom/tile/custom.png</path>
			<maxSize>0.155 0.44</maxSize>
			<pos>0.007 0.85</pos>
			<pos ifSubset="themeRatio:54">0.007 0.87</pos>
			<pos ifSubset="themeRatio:43">0.007 0.87</pos>
			<origin>0.02 1</origin>
            <zIndex>14</zIndex>
			<color>ffffff</color>
			</image>
			
		<image name="videoContainer" extra="true">
			<path>./container${res}.png</path>
		</image>
	
		<image name="led" extra="true">
			<visible>false</visible>
		</image>
	
		<image name="rew" extra="true">
			<visible>false</visible>
		</image>
	
		<image name="next" extra="true">
			<visible>false</visible>
		</image>
	
		<image name="play" extra="true">
			<visible>false</visible>
		</image>

		<text name="logoContainer" extra="true">
			<visible>false</visible>
		</text>
		
		<image name="videoBackFrame" extra="true">
            <pos>0.390625 0.6453703703703704</pos>
            <pos ifSubset="themeRatio:54">0.390625 0.734375</pos>
            <pos ifSubset="themeRatio:43">0.390625 0.7244791666666667</pos>

			<size>0.24 0.32</size>
			<size ifSubset="themeRatio:54">0.24 0.23</size>
			<size ifSubset="themeRatio:43">0.24 0.24</size>

			<color>202020</color>

		</image>

		<image name="randomVideosFx" ifSubset="fullHexa:yes|no" extra="true">
            <pos>0.390625 0.6453703703703704</pos>
            <pos ifSubset="themeRatio:54">0.390625 0.734375</pos>
            <pos ifSubset="themeRatio:43">0.390625 0.7244791666666667</pos>

			<size>0.2354166666666667 0.312962962962963</size>
			<size ifSubset="themeRatio:54">0.2354166666666667 0.220703125</size>
			<size ifSubset="themeRatio:43">0.2354166666666667 0.234375</size>

			<path>./../../crt.png</path>
			<color>ffffff80</color>
		</image>

        <video name="md_video">
			<default>./../../crt.mp4</default>
			<color>ffffffaa</color>

			<size ifSubset="randomRatio:stretched">0.2354166666666667 0.312962962962963</size>

			<size ifSubset="randomRatio:stretched,themeRatio:54">0.2354166666666667 0.220703125</size>

			<size ifSubset="randomRatio:stretched,themeRatio:43">0.2354166666666667 0.234375</size>



            <maxSize ifSubset="randomRatio:original">0.2354166666666667 0.312962962962963</maxSize>

			<maxSize ifSubset="randomRatio:original,themeRatio:54">0.2354166666666667 0.220703125</maxSize>

			<maxSize ifSubset="randomRatio:original,themeRatio:43">0.2354166666666667 0.234375</maxSize>

            <pos>0.390625 0.6453703703703704</pos>
            <pos ifSubset="themeRatio:54">0.390625 0.734375</pos>
            <pos ifSubset="themeRatio:43">0.390625 0.7244791666666667</pos>
		</video>

	<image name="logoTV" extra="true" ifSubset="tvLogo:yes">
		<maxSize>0.1 0.08</maxSize>
		<pos>0.28 0.79</pos>
		<y ifSubset="themeRatio:43|54">0.835</y>
	</image>

	</view>
	
</theme>
