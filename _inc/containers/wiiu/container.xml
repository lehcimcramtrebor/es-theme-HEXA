<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>
		
	<view name="detailed,grid,gamecarousel">
			
		<image name="videoContainer" extra="true">
			<path>./container${res}.png</path>
		</image>
	
		<image name="led" extra="true">
			<visible>false</visible>
		</image>
	
		<image name="rew" extra="true">
			<visible>false</visible>
		</image>
	
		<image name="next" extra="true">
			<visible>false</visible>
		</image>
	
		<image name="play" extra="true">
			<visible>false</visible>
		</image>

		<text name="logoContainer" extra="true">
			<visible>false</visible>
		</text>
		
		<image name="videoBackFrame" extra="true">
            <pos>0.3208333333333333 0.6759259259259259</pos>
            <pos ifSubset="themeRatio:54">0.3208333333333333 0.7555555555555556</pos>
            <pos ifSubset="themeRatio:43">0.3208333333333333 0.7476851851851852</pos>

			<size>0.35 0.33</size>
