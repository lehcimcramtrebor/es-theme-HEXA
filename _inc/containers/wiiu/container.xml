			<size ifSubset="themeRatio:43">0.35 0.25</size>

		</image>

		<image name="randomVideosFx" ifSubset="fullHexa:yes|no" extra="true">
            <pos>0.3208333333333333 0.6759259259259259</pos>
            <pos ifSubset="themeRatio:54">0.3208333333333333 0.7555555555555556</pos>
            <pos ifSubset="themeRatio:43">0.3208333333333333 0.7476851851851852</pos>

			<size>0.3427083333333333 0.3296296296296296</size>
			<size ifSubset="themeRatio:54">0.3427083333333333 0.2314814814814815</size>
			<size ifSubset="themeRatio:43">0.3427083333333333 0.2472222222222222</size>

			<path>./../../crt.png</path>
			<color>ffffff80</color>
		</image>

        <video name="md_video">
			<default>./../../crt.mp4</default>

			<size ifSubset="randomRatio:stretched">0.3427083333333333 0.3296296296296296</size>

			<size ifSubset="randomRatio:stretched,themeRatio:54">0.3427083333333333 0.2314814814814815</size>

			<size ifSubset="randomRatio:stretched,themeRatio:43">0.3427083333333333 0.2472222222222222</size>



