<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>
		
	<view name="detailed,grid,gamecarousel">
        
		<image name="logoColorContainer" extra="true">
            <linearSmooth>true</linearSmooth>
            <path>./../../../default/color.png</path>
            <path>./../../../default/color-${lang}.png</path>
            <path>./../../../${system.theme}/color.png</path>
            <path>./../../../${system.theme}/color-${lang}.png</path>
            <path region="us">./../../../${system.theme}/us/color.png</path>
            <path region="jp">./../../../${system.theme}/jp/color.png</path>
            <path ifSubset="neogeoaes:yes">./../../../${system.theme}/color-aes.png</path>
            <path ifSubset="containerTile:customTile">./../../../_hexaCustom/tile/custom.png</path>
            <path ifArch="windows" ifSubset="containerTile:customTile">./../../../../../../../_hexaCustom/tile/custom.png</path>
            <path ifNotArch="windows" ifSubset="containerTile:customTile">./../../../../../_hexaCustom/tile/custom.png</path>
			<maxSize>0.155 0.48</maxSize>
			<pos>0.007 0.86</pos>
			<pos ifSubset="themeRatio:54">0.007 0.8865</pos>
			<pos ifSubset="themeRatio:43">0.007 0.8885</pos>
			<origin>0.02 1</origin>
            <zIndex>14</zIndex>
			<color>ffffff</color>
			</image>
			
		<image name="videoContainer" extra="true">
			<path>./container${res}.png</path>
		</image>
	
		<image name="led" extra="true">
			<visible>false</visible>
		</image>
	
		<image name="rew" extra="true">
			<visible>false</visible>
		</image>
	
		<image name="next" extra="true">
			<visible>false</visible>
		</image>
	
		<image name="play" extra="true">
			<visible>false</visible>
		</image>

		<text name="logoContainer" extra="true">
			<visible>false</visible>
		</text>
		
		<image name="videoBackFrame" extra="true">
            <pos>0.3895833333333333 0.6657407407407407</pos>
            <pos ifSubset="themeRatio:54">0.3895833333333333 0.7486111111111111</pos>
            <pos ifSubset="themeRatio:43">0.3895833333333333 0.7398148148148148</pos>

			<size>0.15 0.17</size>
			<size ifSubset="themeRatio:54">0.15 0.12</size>
			<size ifSubset="themeRatio:43">0.15 0.13</size>

		</image>

		<image name="randomVideosFx" ifSubset="fullHexa:yes|no" extra="true">
            <pos>0.3895833333333333 0.6657407407407407</pos>
            <pos ifSubset="themeRatio:54">0.3895833333333333 0.7486111111111111</pos>
            <pos ifSubset="themeRatio:43">0.3895833333333333 0.7398148148148148</pos>

			<size>0.1447916666666667 0.1611111111111111</size>
			<size ifSubset="themeRatio:54">0.1447916666666667 0.1138888888888889</size>
			<size ifSubset="themeRatio:43">0.1447916666666667 0.1222222222222222</size>

			<path>./../../crt.png</path>
			<color>ffffff80</color>
		</image>

        <video name="md_video">
			<default>./../../crt.mp4</default>

			<size ifSubset="randomRatio:stretched">0.1447916666666667 0.1611111111111111</size>

			<size ifSubset="randomRatio:stretched,themeRatio:54">0.1447916666666667 0.1138888888888889</size>

			<size ifSubset="randomRatio:stretched,themeRatio:43">0.1447916666666667 0.1222222222222222</size>



            <maxSize ifSubset="randomRatio:original">0.1447916666666667 0.1611111111111111</maxSize>

			<maxSize ifSubset="randomRatio:original,themeRatio:54">0.1447916666666667 0.1138888888888889</maxSize>

			<maxSize ifSubset="randomRatio:original,themeRatio:43">0.1447916666666667 0.1222222222222222</maxSize>

            <pos>0.3895833333333333 0.6657407407407407</pos>
            <pos ifSubset="themeRatio:54">0.3895833333333333 0.7486111111111111</pos>
            <pos ifSubset="themeRatio:43">0.3895833333333333 0.7398148148148148</pos>
		</video>

	</view>
	
</theme>
