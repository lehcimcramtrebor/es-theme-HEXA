<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>
		
	<view name="detailed,grid,gamecarousel">
        
		<image name="logoColorContainer" extra="true">
            <linearSmooth>true</linearSmooth>
            <path>./../../../default/color.png</path>
            <path>./../../../default/color-${lang}.png</path>
            <path>./../../../${system.theme}/color.png</path>
            <path>./../../../${system.theme}/color-${lang}.png</path>
            <path region="us">./../../../${system.theme}/us/color.png</path>
            <path region="jp">./../../../${system.theme}/jp/color.png</path>
            <path ifSubset="neogeoaes:yes">./../../../${system.theme}/color-aes.png</path>
            <path ifSubset="containerTile:customTile">./../../../_hexaCustom/tile/custom.png</path>
            <path ifArch="windows" ifSubset="containerTile:customTile">./../../../../../../../_hexaCustom/tile/custom.png</path>
            <path ifNotArch="windows" ifSubset="containerTile:customTile">./../../../../../_hexaCustom/tile/custom.png</path>
			<maxSize>0.205 0.54</maxSize>
			<pos>0.0 0.922</pos>
			<pos ifSubset="themeRatio:54">0.0 0.93</pos>
			<pos ifSubset="themeRatio:43">0.0 0.934</pos>
			<origin>0.02 1</origin>
            <zIndex>15</zIndex>
			<color>ffffff</color>
			</image>
			
		<image name="videoContainer" extra="true">
			<path>./container${res}.png</path>
		</image>
	
		<image name="led" extra="true">
			<visible>false</visible>
		</image>
	
		<image name="rew" extra="true">
			<visible>false</visible>
		</image>
	
		<image name="next" extra="true">
			<visible>false</visible>
		</image>
	
		<image name="play" extra="true">
			<visible>false</visible>
		</image>

		<text name="logoContainer" extra="true">
			<visible>false</visible>
		</text>
		
		<image name="videoBackFrame" extra="true">
			<color>808080</color>
            <pos>0.3979166666666667 0.6125</pos>
            <pos ifSubset="themeRatio:54">0.3979166666666667 0.7106481481481481</pos>
            <pos ifSubset="themeRatio:43">0.3979166666666667 0.699537037037037</pos>

			<size>0.12 0.18</size>
			<size ifSubset="themeRatio:54">0.12 0.13</size>
			<size ifSubset="themeRatio:43">0.12 0.14</size>

		</image>

		<image name="randomVideosFx" ifSubset="fullHexa:yes|no" extra="true">
            <pos>0.3979166666666667 0.6125</pos>
            <pos ifSubset="themeRatio:54">0.3979166666666667 0.7106481481481481</pos>
            <pos ifSubset="themeRatio:43">0.3979166666666667 0.699537037037037</pos>

			<size>0.1192708333333333 0.1768518518518519</size>
			<size ifSubset="themeRatio:54">0.1192708333333333 0.125</size>
			<size ifSubset="themeRatio:43">0.1192708333333333 0.1342592592592593</size>

			<path>./../../crt.png</path>
			<color>ffffff80</color>
		</image>

        <video name="md_video">
			<color>ffffff66</color>
			<default>./../../crt.mp4</default>

			<size ifSubset="randomRatio:stretched">0.1192708333333333 0.1768518518518519</size>

			<size ifSubset="randomRatio:stretched,themeRatio:54">0.1192708333333333 0.125</size>

			<size ifSubset="randomRatio:stretched,themeRatio:43">0.1192708333333333 0.1342592592592593</size>



            <maxSize ifSubset="randomRatio:original">0.1192708333333333 0.1768518518518519</maxSize>

			<maxSize ifSubset="randomRatio:original,themeRatio:54">0.1192708333333333 0.125</maxSize>

			<maxSize ifSubset="randomRatio:original,themeRatio:43">0.1192708333333333 0.1342592592592593</maxSize>

            <pos>0.3979166666666667 0.6125</pos>
            <pos ifSubset="themeRatio:54">0.3979166666666667 0.7106481481481481</pos>
            <pos ifSubset="themeRatio:43">0.3979166666666667 0.699537037037037</pos>
		</video>

	<image name="logoTV" extra="true" ifSubset="tvLogo:yes">
		<maxSize>0.07 0.05</maxSize>
		<pos>0.245 0.698</pos>
		<y ifSubset="themeRatio:43|54">0.772</y>
	</image>

	</view>
	
</theme>
