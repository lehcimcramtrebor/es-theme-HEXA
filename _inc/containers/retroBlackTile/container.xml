<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>
		
	<view name="detailed,grid,gamecarousel">
        
		<image name="logoColorContainer" extra="true">
            <linearSmooth>true</linearSmooth>
            <path>./../../../default/color.png</path>
            <path>./../../../default/color-${lang}.png</path>
            <path>./../../../${system.theme}/color.png</path>
            <path>./../../../${system.theme}/color-${lang}.png</path>
            <path region="us">./../../../${system.theme}/us/color.png</path>
            <path region="jp">./../../../${system.theme}/jp/color.png</path>
            <path ifSubset="neogeoaes:yes">./../../../${system.theme}/color-aes.png</path>
            <path ifSubset="containerTile:customTile">./../../../_hexaCustom/tile/custom.png</path>
            <path ifArch="windows" ifSubset="containerTile:customTile">./../../../../../../../_hexaCustom/tile/custom.png</path>
            <path ifNotArch="windows" ifSubset="containerTile:customTile">./../../../../../_hexaCustom/tile/custom.png</path>
			<maxSize>0.248 0.63</maxSize>
			<pos>0 0.989</pos>
			<pos ifSubset="themeRatio:54">0 0.975</pos>
			<pos ifSubset="themeRatio:43">0 0.98</pos>
			<origin>0.02 1</origin>
            <zIndex>15</zIndex>
			<color>ffffff</color>
			</image>
			
		<image name="videoContainer" extra="true">
			<path>./container${res}.png</path>
		</image>
	
		<image name="led" extra="true">
			<visible>false</visible>
		</image>
	
		<image name="rew" extra="true">
			<visible>false</visible>
		</image>
	
		<image name="next" extra="true">
			<visible>false</visible>
		</image>
	
		<image name="play" extra="true">
			<visible>false</visible>
		</image>

		<text name="logoContainer" extra="true">
 			<pos>0.42 0.928</pos>
			<pos ifSubset="themeRatio:54">0.42 0.931</pos>
			<pos ifSubset="themeRatio:43">0.42 0.935</pos>
		</text>
		
		<image name="videoBackFrame" extra="true">
            <pos>0.3919270833333333 0.6958333333333333</pos>
            <pos ifSubset="themeRatio:54">0.3919270833333333 0.7689814814814815</pos>
            <pos ifSubset="themeRatio:43">0.3919270833333333 0.762037037037037</pos>

			<size>0.26 0.36</size>
			<size ifSubset="themeRatio:54">0.26 0.25</size>
			<size ifSubset="themeRatio:43">0.26 0.27</size>
		</image>

		<image name="randomVideosFx" ifSubset="fullHexa:yes|no" extra="true">
            <pos>0.3919270833333333 0.6958333333333333</pos>
            <pos ifSubset="themeRatio:54">0.3919270833333333 0.7689814814814815</pos>
            <pos ifSubset="themeRatio:43">0.3919270833333333 0.762037037037037</pos>

			<size>0.2546875 0.3490740740740741</size>
			<size ifSubset="themeRatio:54">0.2546875 0.2472222222222222</size>
			<size ifSubset="themeRatio:43">0.2546875 0.262962962962963</size>

			<path>./../../phosphore.png</path>
			<color>ffffff80</color>
			<storyboard>
                <animation property="opacity" from="0" to="1" autoreverse="true" repeat="forever" duration="25" mode="linear"/>
            </storyboard>
		</image>

        <video name="md_video">
			<default>./../../glitch.mp4</default>

			<size ifSubset="randomRatio:stretched">0.2546875 0.3490740740740741</size>

			<size ifSubset="randomRatio:stretched,themeRatio:54">0.2546875 0.2472222222222222</size>

			<size ifSubset="randomRatio:stretched,themeRatio:43">0.2546875 0.262962962962963</size>



            <maxSize ifSubset="randomRatio:original">0.2546875 0.3490740740740741</maxSize>

			<maxSize ifSubset="randomRatio:original,themeRatio:54">0.2546875 0.2472222222222222</maxSize>

			<maxSize ifSubset="randomRatio:original,themeRatio:43">0.2546875 0.262962962962963</maxSize>

            <pos>0.3919270833333333 0.6958333333333333</pos>
            <pos ifSubset="themeRatio:54">0.3919270833333333 0.7689814814814815</pos>
            <pos ifSubset="themeRatio:43">0.3919270833333333 0.762037037037037</pos>
		</video>

	</view>
	
</theme>
