			<path>./../../crt.png</path>
			<color>ffffff80</color>
		</image>

        <video name="md_video">
			<default>./../../crt.mp4</default>
			<color>7f945880</color>

			<size ifSubset="randomRatio:stretched">0.1578125 0.2666666666666667</size>

			<size ifSubset="randomRatio:stretched,themeRatio:54">0.1578125 0.187962962962963</size>

			<size ifSubset="randomRatio:stretched,themeRatio:43">0.1578125 0.2</size>



