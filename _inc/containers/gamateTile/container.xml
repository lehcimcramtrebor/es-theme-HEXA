			<maxSize>0.155 0.46</maxSize>
			<pos>0.007 0.88</pos>
			<pos ifSubset="themeRatio:54">0.007 0.895</pos>
			<pos ifSubset="themeRatio:43">0.007 0.898</pos>
			<origin>0.02 1</origin>
            <zIndex>14</zIndex>
			<color>ffffff</color>
			</image>
			
		<image name="videoContainer" extra="true">
			<path>./container${res}.png</path>
		</image>
	
		<image name="led" extra="true">
			<visible>false</visible>
		</image>
	
		<image name="rew" extra="true">
			<visible>false</visible>
		</image>
	
		<image name="next" extra="true">
			<visible>false</visible>
		</image>
	
		<image name="play" extra="true">
			<visible>false</visible>
		</image>

		<text name="logoContainer" extra="true">
			<visible>false</visible>
		</text>
		
		<image name="videoBackFrame" extra="true">
            <pos>0.38671875 0.6185185185185185</pos>
            <pos ifSubset="themeRatio:54">0.38671875 0.7152777777777778</pos>
            <pos ifSubset="themeRatio:43">0.38671875 0.7046296296296296</pos>

			<size>0.16 0.27</size>
			<size ifSubset="themeRatio:54">0.16 0.19</size>
			<size ifSubset="themeRatio:43">0.16 0.21</size>
			<color>7f9458</color>

		</image>

		<image name="randomVideosFx" ifSubset="fullHexa:yes|no" extra="true">
            <pos>0.38671875 0.6185185185185185</pos>
            <pos ifSubset="themeRatio:54">0.38671875 0.7152777777777778</pos>
            <pos ifSubset="themeRatio:43">0.38671875 0.7046296296296296</pos>

			<size>0.1578125 0.2666666666666667</size>
