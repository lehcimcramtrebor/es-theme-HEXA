			<size ifSubset="themeRatio:43">0.1598958333333333 0.3166666666666667</size>

			<path>./../../crt.png</path>
			<color>ffffff80</color>
		</image>

        <video name="md_video">
			<default>./../../crt.mp4</default>

			<size ifSubset="randomRatio:stretched">0.1598958333333333 0.4212962962962963</size>

			<size ifSubset="randomRatio:stretched,themeRatio:54">0.1598958333333333 0.2972222222222222</size>

			<size ifSubset="randomRatio:stretched,themeRatio:43">0.1598958333333333 0.3166666666666667</size>



