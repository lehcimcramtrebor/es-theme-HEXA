			<maxSize ifSubset="randomRatio:original,themeRatio:43">0.278125 0.2009259259259259</maxSize>

            <pos>0.3875 0.6560185185185185</pos>
            <pos ifSubset="themeRatio:54">0.3875 0.7407407407407407</pos>
            <pos ifSubset="themeRatio:43">0.3875 0.7319444444444444</pos>
