		</image>
	
		<image name="play" extra="true">
			<visible>false</visible>
		</image>

		<text name="logoContainer" extra="true">
			<visible>false</visible>
		</text>
		
		<image name="videoBackFrame" extra="true">
            <pos>0.4505208333333333 0.6189814814814815</pos>
            <pos ifSubset="themeRatio:54">0.4505208333333333 0.7152777777777778</pos>
            <pos ifSubset="themeRatio:43">0.4505208333333333 0.7046296296296296</pos>

			<size>0.18 0.295</size>
